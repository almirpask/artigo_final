<h1>Subjects Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects_teachers.each do |subjects_teacher| %>
      <tr>
        <td><%= subjects_teacher.subject.description %></td>
        <td><%= subjects_teacher.teacher.name %></td>
        <td><%= link_to 'Show', subjects_teacher %></td>
        <td><%= link_to 'Edit', edit_subjects_teacher_path(subjects_teacher) %></td>
        <td><%= link_to 'Destroy', subjects_teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

